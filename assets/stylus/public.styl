@import 'reset.styl'

@import 'base.styl'

/**
 * layout
 **/
.layout
  width: 660px
  margin: 0 auto

footer
  padding: 40px 0 30px

body > header
  margin: 0 auto

section
  .sec
    margin-top: 20px

header + section.layout
  margin-top: 20px

.site-title 
  font-weight: bold
  padding: 30px 0 20px
  border-bottom: 1px dotted #D0D0D0

  a
    color: #a00
    font-size: 200%
    text-decoration: none
    letter-spacing: -2px

    &:hover
      color: #740000



.list > .title
  font-variant: small-caps
  font-size: 150%;
  font-weight: normal
  margin-bottom: 10px

.list
  .item
    line-height: 1.8
    .title
      font-size: 110%

  .delimiter
    margin: 0 4px
    color: #AF0404

  .item > .time
    font-family: fantasy, arial
    color: #963E96
    font-size: small

.post-list
  .item
    font-size: 110%

.detail.page
  .title
    font-size: 150%

/**
 * article
 */
article
  header
    padding: 10px 0
    margin-bottom: 10px

.entry
  font-size: 110%
  line-height: 2

  pre
    padding: 6px 4px
    font-family: consolas
    line-height: 1.4

@media only screen and (max-device-width: 480px)
  .layout
    width: auto
    padding: 0 1em
  .site-title
    padding-top: 10px
    padding-bottom: 10px
